@page
@model BlogPlatformWebApp.Pages.Posts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    .username {
        text-decoration: none;
    }
</style>

@* <h1>Details</h1> *@

<div class="container-sm w-75">
    <!-- Title -->
    <h2>@Html.DisplayFor(model => model.Post.Title)</h2>

    <!-- Username -->
    <p>By <a class="username" asp-page="/Profile/Index" asp-route-username="@Model.Post.Username">@Html.DisplayFor(model => model.Post.Username)</a></p>

    <!-- Read Time -->
    <p>@Html.DisplayFor(model => model.Post.ReadTimeInMinutes) min read</p>

    <!-- Date Created -->
    <p>Created: @Html.DisplayFor(model => model.Post.DateCreated)</p>

    <!-- Date Edited -->
    @if (!Model.Post.DateEdited.ToString().Equals(Model.Post.DateCreated.ToString()))
    {
        <p>Edited: @Html.DisplayFor(model => model.Post.DateEdited)</p>
    }

    <!-- Content -->
    <p style="white-space: pre-line; font-size: 20px;">
        @Html.DisplayFor(model => model.Post.Content)
    </p>

    <!-- Topic -->
    <span class="badge bg-secondary">
        @Html.DisplayFor(model => model.Post.Topic)
    </span>

    <br /><br />
    @if (Model.Username != null && Model.Username == Model.Post.Username)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Post?.Id">Edit</a>
        <p style="display: inline;">|</p>
        <a asp-page="./Delete" asp-route-id="@Model.Post?.Id">Delete</a>
        <p style="display: inline;">|</p>
    }

    <a asp-page="./Index">Back</a>
</div>

