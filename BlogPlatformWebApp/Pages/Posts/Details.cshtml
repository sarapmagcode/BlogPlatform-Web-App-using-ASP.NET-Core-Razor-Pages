@page
@model BlogPlatformWebApp.Pages.Posts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">

        <!-- Username -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Username)
        </dd>

        <!-- Date Created -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.DateCreated)
        </dd>

        <!-- Date Edited -->
        @if (!Model.Post.DateEdited.ToString().Equals(Model.Post.DateCreated.ToString()))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Post.DateEdited)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Post.DateEdited)
            </dd>
        }

        <!-- Post Title -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>

        <!-- Content -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Content)
        </dd>

        <!-- Topic -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Topic)
        </dd>

        <!-- Read Time -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.ReadTimeInMinutes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.ReadTimeInMinutes)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Username != null && Model.Username == Model.Post.Username)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Post?.Id">Edit</a>
        <p style="display: inline;">|</p>
        <a asp-page="./Delete" asp-route-id="@Model.Post?.Id">Delete</a>
        <p style="display: inline;">|</p>
    }

    <a asp-page="./Index">Back to List</a>
</div>
